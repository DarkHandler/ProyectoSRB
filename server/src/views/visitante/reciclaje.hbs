</div>
<br>
<div class="container text-center w3-round-large bg-white">
    <h1 class="colorvclaro">Reciclaje del ultimo mes</h1>
    
    <div class="graph-container w3-round-large" style="background-color:#ffffff;">
        <div id="myfirstchart" style="height: 250px;"></div>
    </div>
    <h1>Total: {{info.[1].[0].Total}} </h1>
</div>

</div>


<script>
    new Morris.Bar({
        barSizeRatio: 0.30,
        // ID of the element in which to draw the chart.
        element: 'myfirstchart',
        // Chart data records -- each entry in this array corresponds to a point on
        // the chart.
        data: [
            {{#each info.[0]}}
                { Fecha: '{{this.X}}', value: {{ this.Y }} },
            {{/each}}
        ],
        // The name of the data record attribute that contains x-values.
        xkey: 'Fecha',
        // A list of names of data record attributes that contain y-values.
        ykeys: ['value'],
        hideHover: true, resize: true,
        //parseTime: false,
        // Labels for the ykeys -- will be displayed when you hover over the
        // chart.
        labels: ['Viviendas']
        });
</script>