<div class="conteiner p-4">
    <br>
    <div class="row">
        <h3 class="text-center">CORROBORACION DE RECICLAJE POR PARTE DE LOS USUARIOS</h3>
    </div>
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a type="button" href="/descargar/reciclaje" class="btn btn-dark">Generar archivo</a>
            <a class="btn btn btn-outline-secondary bg-dark" onclick="downanddown()">Exportar a excel</a>
            <a href="/excels/reciclaje.csv" id="descargar" style="display: none;"
                download="reciclaje.csv"></a>
            <a href="/eliminarArchivo/reciclaje" id="eliminame" style="display: none;"></a>
            <div class="table-responsive">
                <table class="table table-info table-striped table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Run del usuario</th>
                            <th scope="col">Tel√©fono del usuario</th>
                            <th scope="col">Rol de la vivienda</th>
                            <th scope="col">Fecha de reciclaje</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reciclaje}}
                        <tr>
                            <td>{{this.run}}</td>
                            <td>{{this.telefono}}</td>
                            <td>{{this.rol}}</td>
                            <td>{{this.fecha_reciclaje}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function downanddown() {
        document.getElementById('descargar').click();
        document.getElementById('eliminame').click();
    }
</script>